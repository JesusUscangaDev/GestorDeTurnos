<Window x:Class="GestorDeTurnos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorDeTurnos"
        mc:Ignorable="d"
        Title="Solicitar Turno" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Seleccione un Módulo:" FontSize="16" />
            <ComboBox x:Name="cbModulos" Height="30" Width="200" />

            <Button Content="Solicitar Turno" Height="40" Width="200"
                    Margin="0,20,0,0" Click="SolicitarTurno_Click"/>
        </StackPanel>
    </Grid>
</Window>
